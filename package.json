{
  "name": "kubi-cohort-2025",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "apis"
  ],
  "scripts": {
    "postinstall": "npm --prefix frontend ci && npm --prefix apis ci",
    "build": "npm run build:frontend",
    "build:frontend": "npm --prefix frontend run build",
    "build:apis": "npm --prefix apis run build",
    "dev": "concurrently \"npm --prefix frontend run dev\" \"npm --prefix apis run dev\"",
    "start": "npm --prefix frontend run start",
    "lint": "npm --prefix frontend run lint"
  },
  "dependencies": {
    "@coinbase/wallet-sdk": "^4.3.7",
    "axios": "^1.13.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "lucide-react": "^0.469.0",
    "next": "16.0.3",
    "next-devtools-mcp": "^0.3.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^3.4.1",
    "xrpl": "^4.4.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "@tailwindcss/postcss": "4.1.17",
    "@types/node": "^20.14.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "nodemon": "^3.0.1",
    "tailwindcss": "4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "npm@9"
}
